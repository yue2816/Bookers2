<h1>Books</h1>
<table class="table">
  <% @book.each do |book| %>
  <tbody>
    <tr>
      <td>
        <%= image_tag 'sample-author1.jpg' %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id)  %>
