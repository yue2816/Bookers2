<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @books.user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th>name</th><td><%= @books.user.name %></td>
        </tr>
        <tr>
          <th>introduction</th><td><%= @books.user.self_introduction %></td>
        </tr>
      </table>
      <%= link_to edit_user_path(@books.user.id), class:'btn btn-outline-secondary btn-block' do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

      <%= render 'list', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@books.user.id) do %>
                <%= image_tag @books.user.get_profile_image(80,80) %><br>
                <%= @books.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @books.title, book_path(@books.id)  %>
            </td>
            <td>
              <%= @books.body %>
            </td>
            <td>
              <% if @books.user == current_user %>
                <%= link_to edit_book_path(@books.id), class:"btn btn-success btn-sm" do %>
                  Edit
                <% end %>
              <% end %>
            </td>
            <td>
              <% if @books.user == current_user %>
                <%= link_to book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-danger btn-sm" do %>
                  Destroy
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>