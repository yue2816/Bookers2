<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th></th><th>Title</th><th>Opinion</th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= image_tag 'sample-author1.jpg' %></td>
        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
  <% end %>
</table>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
